<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:spinnerStyle">@style/styleForSpinner</item>
        <item name="android:spinnerItemStyle">@style/styleForSpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/styleForSpinnerDropDownItem</item>
    </style>

    <style name="styleForSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">#FFFF</item>
    </style>

    <style name="styleForSpinner" parent="android:Widget.Holo.Spinner" />

    <style name="styleForSpinnerDropDownItem" parent="android:Widget.Holo.Light.DropDownItem.Spinner">
        <item name="android:textColor">#FFFF</item>
    </style>

</resources>
